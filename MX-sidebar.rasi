/**
 * ROFI Color theme
 * Inspired by sidebar.rasi by Dave Davenport
 */
 
 * {
    // MX-sidebar
    // with tabs
    // mxrr:template-sidebar.rasi
    font: "Noto Sans 12";
}

* {
    // Title background
    color01: #1D2324;
    // Title text
    color02: #CACDD0;
    // Searchbar background
    color03: #29353B;
    // Searchbar text
    color04: #ffffff;
    // Inctive tab background
    color05: #29353B;
    // Inctive tab text
    color06: #CACDD0;
    // Active tab background
    color07: #1D2324;
    // Active tab text
    color08: #ffffff;
    // Active tab highlight
    color09: #0f56d9;
    // Selection background
    color10: #0f56d9;
    // Selection text 
    color11: #ffffff;
}

window {
    // height:   80%;
    width: 15%;
    location: west;
    anchor:   west;
//  text-color: @color04;
    border: 5px 0px 0px 0px;
    border-color: @color09;
}

mainbox {
    children: [ inputbar, listview ];
    expand: true;
    background-color: @color01;
    text-color: @color04;
    spacing: 1em;
}


