inputbar {
    children: [ entry ];
   background-color: @color01;
//    text-color: @color04;
    padding: 4px;
    border: 0px 0px 2px 0px;
}

entry {
    background-color: @color03;
    text-color: @color04;
    vertical-align: 0.5;
    padding: 5px 15px;
}


listview {
    background-color: @color01;
    text-color: @color04;
    padding: 0em 0.4em 0em 1em;
    dynamic: false;
    // lines: 0;
    lines: 30;
}

element-text {
    background-color: inherit;
    text-color:       inherit;
}

element selected {
    background-color: @color09;
    text-color: @color11;
}

element normal {
    background-color: @color01;
    text-color: @color11;
}

